---
import { getCollection } from "astro:content";

import Layout from "@/layouts/base.astro";


// Components
import PostListItem from "@/components/PostListItemTwo.astro";

const pengumumanPosts = await getCollection("pengumuman");
---

<Layout title="Pengumuman Pengurus Daerah Kabupaten Garut Ikatan Notaris Indonesia">
    <div class="max-w-4xl mx-auto px-4 mb-4 mt-6 lg:mt-16">

        <ul>
            {
                pengumumanPosts.map((post) => (
                    <li class="mb-4 border-b border-zinc-200 last:border-none pb-4">
                        <PostListItem
                            title={post.data.title}
                            image={post.data.image}
                            summary={post.data.summary}
                            href={`/pengumuman/${post.slug}`}
                            postDate={post.data.postDate}
                        />
                    </li>
                ))
            }
        </ul>
    </div>
</Layout>
